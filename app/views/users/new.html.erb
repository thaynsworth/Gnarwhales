<h1>Sign up</h1>

<div class="row">
  <div class="signup form">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      

      <%= f.submit "Create my account", class: "create button" %>
    <% end %>
  </div>
</div>

